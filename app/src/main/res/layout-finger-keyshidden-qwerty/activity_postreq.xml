<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".PostReqActivity"
    tools:ignore="MissingDefaultResource"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >

    <View
        android:id="@+id/req_page_bg_accent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/homepage_view"
        android:backgroundTint="@color/accent_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/req_page_bg"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/homepage_view"
        android:backgroundTint="@color/accent_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Computer Science\nPOSt Requirements Check"
        android:textAlignment="center"
        android:textColor="@color/accent_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_page_bg_accent"
        tools:context=".PostReqActivity"
        tools:ignore="MissingDefaultResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/accent_grey"
                android:text="I Am In The CS Admission Stream"
                android:textColor="@color/accent_dark"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/a31"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:hint="MATA31 Mark"
                android:textColor="@color/font_black"
                android:textColorHint="@color/accent_grey"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                app:layout_constraintVertical_bias="0.0"></EditText>

            <EditText
                android:id="@+id/a67"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:hint="CSC/MATA67 Mark"
                android:textColor="@color/font_black"
                android:textColorHint="@color/accent_grey"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a31"
                app:layout_constraintVertical_bias="0.0"></EditText>

            <EditText
                android:id="@+id/a22"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:hint="MATA22 Mark"
                android:textColor="@color/font_black"
                android:textColorHint="@color/accent_grey"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a48"
                app:layout_constraintVertical_bias="0.0"></EditText>

            <EditText
                android:id="@+id/a48"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:hint="MATA48 Mark"
                android:textColor="@color/font_black"
                android:textColorHint="@color/accent_grey"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a67"
                app:layout_constraintVertical_bias="0.0"></EditText>

            <EditText
                android:id="@+id/a37"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:hint="MATA37 Mark"
                android:textColor="@color/font_black"
                android:textColorHint="@color/accent_grey"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/a22"
                app:layout_constraintVertical_bias="0.0"></EditText>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/result_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/accent_dark"
        android:text="Result"
        android:textColor="@color/accent_light"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_down" />

    <TextView
        android:id="@+id/result_view"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/accent_dark"
        android:text="Result Message:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_button" />

    <TextView
        android:id="@+id/scroll_down"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Scroll Down"
        android:textColor="@color/accent_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>