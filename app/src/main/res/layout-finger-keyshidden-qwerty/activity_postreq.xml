<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background"
    tools:context=".PostReqActivity"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Computer Science\nPOSt Requirements Check"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/accent_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="I Am In The CS Admission Stream"
        android:textColor="@color/accent_dark"
        android:textSize="16dp"
        android:buttonTint="@color/accent_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/a31"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="MATA31 Mark"
        android:textColor="@color/font_black"
        android:textColorHint="@color/accent_grey"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.0"></EditText>

    <EditText
        android:id="@+id/a67"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="CSC/MATA67 Mark"
        android:textSize="16dp"
        android:textColorHint="@color/accent_grey"
        android:textColor="@color/font_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a31"
        app:layout_constraintVertical_bias="0"></EditText>

    <EditText
        android:id="@+id/a48"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="MATA48 Mark"
        android:textSize="16dp"
        android:textColorHint="@color/accent_grey"
        android:textColor="@color/font_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a67"
        app:layout_constraintVertical_bias="0">
    </EditText>

    <EditText
        android:id="@+id/a22"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="MATA22 Mark"
        android:textSize="16dp"
        android:textColorHint="@color/accent_grey"
        android:textColor="@color/font_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a48"
        app:layout_constraintVertical_bias="0">
    </EditText>

    <EditText
        android:id="@+id/a37"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:hint="MATA37 Mark"
        android:textSize="16dp"
        android:textColorHint="@color/accent_grey"
        android:textColor="@color/font_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a22"
        app:layout_constraintVertical_bias="0">
    </EditText>

    <Button
        android:id="@+id/result_button"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/accent_dark"
        android:text="Results"
        android:textColor="@color/accent_light"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a37"
        app:layout_constraintVertical_bias="0.882" />

</androidx.constraintlayout.widget.ConstraintLayout>